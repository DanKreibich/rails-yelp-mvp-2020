<h1> <%= @restaurant.name %> </h1>
<ul>
  <li> Address: <%= @restaurant.address %> </li>
  <li> Phone: <%= @restaurant.phone_number %> </li>
  <li> Cuisine: <%= @restaurant.category %> </li>
</ul>

<%= link_to "All restaurants", restaurants_path,  class: "btn btn-primary" %>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li> Rating: <%= review.rating %> - Description: <%= review.content %> </li>
  <% end %>
</ul>


<%= link_to "Add a review", new_restaurant_review_path(@restaurant),  class: "btn btn-primary" %>

<h1>Create a new </h1>

<%= simple_form_for [@restaurant, @review] do |f|%>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
